@model Semester
<!-- Begin Page Content -->
 <div class="container-fluid">

     <!-- Page Heading -->
     <h1 class="h3 mb-2 text-gray-800">Semester Tables</h1>

    <button type="button" class="btn btn-outline-primary my-4 btn-lg" data-toggle="modal" data-target="#modalCenter">
        Create Semester
    </button>

     <!-- DataTales Example -->
     <div class="card shadow mb-4">
         <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
         </div>
         <div class="card-body">
             <div class="table-responsive">
                 <table id="semester-table" class="table table-bordered table-hover table-striped" width="100%" cellspacing="0">
                     <thead>
                         <tr>
                             <th>No.</th>
                             <th>Name</th>
                             <th>Start Date</th>
                             <th>End Date</th>
                             <th></th>
                         </tr>
                     </thead>
                 </table>
             </div>
         </div>
     </div>

 </div>
 <!-- /.container-fluid -->
<!-- Modal -->
<div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form id="semesterForm" method="post">
        <input asp-for="Id" id="semesterId" class="form-control" aria-required="true" placeholder="" type="hidden"/>
        <div class="modal-content" style="width: 550px">
            <div class="modal-header">
                @if(Model?.Id != 0)
                {
                    <h5 class="modal-title" id="exampleModalCenterTitle">Edit Semester</h5>
                }
                else
                {
                    <h5 class="modal-title" id="exampleModalCenterTitle">Create Semester</h5>
                }
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col">
                        <h5>Name</h5>
                        <div>
                            <input asp-for="Name" id="semesterName" class="form-control" aria-required="true" placeholder="" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="row">
                            <div class="col" style="margin-left: 12px;">
                                <h5>Open date</h5>
                                <input asp-for="StartDate" id="semesterStartDate" class="form-control" aria-required="true" placeholder="" style="width: 230px" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <h5>Close date</h5>
                                <input asp-for="EndDate" id="semesterEndDate" class="form-control" aria-required="true" placeholder="" style="width: 230px" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>
        </form>
    </div>
</div>

 @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/semester.js"></script>
 }