@model Tuple<Semester, int, int, int, List<Magazine>>
@{
    string startDate = Model.Item1.StartDate.ToString("dd/MM/yyyy");
    string endDate = Model.Item1.EndDate.ToString("dd/MM/yyyy");
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
    </div>

    <!-- Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="font-weight-bold text-primary text-uppercase mb-1">
                                @Model.Item1.Name
                            </div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">@startDate to @endDate</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-calendar fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="font-weight-bold text-success text-uppercase mb-1">
                                Contribution Approved
                            </div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.Item2 contributions approved</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-check fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="font-weight-bold text-warning text-uppercase mb-1">
                                Pending Contribution
                            </div>
                            <div class="row no-gutters align-items-center">
                                <div class="col-auto">
                                    <div class="h6 mb-0 mr-3 font-weight-bold text-gray-800">@Model.Item3 pending contributions</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-pencil fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="font-weight-bold text-danger text-uppercase mb-1">
                                Contribution Rejected
                            </div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">@Model.Item4 contributions rejected</div>
                        </div>
                        <div class="col-auto">
                            <i class="fa fa-times fa-2x text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-sm-flex mb-4">
        <h1 class="h3 mb-0 text-gray-800">Opening Magazines</h1>
    </div>
    <!-- Row -->
    <div class="row mx-2">
        @if (Model.Item5.Any())
        {
            <div class="d-flex flex-wrap" style="gap: 2rem;">
                @foreach (var magazine in Model.Item5)
                {
                    <a href="@Url.Action("Details", "Magazine", new { id = magazine.Id })" class="text-black-50" style="text-decoration: none;">
                        <div class="card shadow" style="width: 18rem;">
                            <div>
                                <img src="~/image/magazine/computer-magazine-spring-2024.jpg" class="card-img-top position-relative" alt="...">
                                <div class="position-absolute" style="left: 0.5rem; top: 0.5rem">
                                    @if ((magazine.EndDate - DateTime.Now).TotalDays < 2)
                                    {
                                        <span class="badge badge-warning">Near Closing</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-success">Opening</span>
                                    }
                                    <span class="badge badge-primary">@magazine.Faculty.Name</span>
                                    <span class="badge badge-info">@magazine.Semester.Name</span>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title " style="height: 3rem; overflow: hidden; text-overflow: ellipsis;" title="@magazine.Name">@magazine.Name</h5>
                                <p class="card-text" style="height: 6.25rem; overflow: hidden; text-overflow: ellipsis;">@magazine.Description</p>
                                <div class="card-text d-flex">
                                    <p class="text-success"><i class="fa fa-calendar" style="color: black;"></i> &nbsp; @magazine.StartDate.ToShortDateString()</p>
                                    <p>&nbsp; to &nbsp;</p>
                                    <p class="text-danger">@magazine.EndDate.ToShortDateString()</p>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
    </div>
</div>