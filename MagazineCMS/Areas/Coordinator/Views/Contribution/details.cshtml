@model MagazineCMS.Models.Contribution
@using MagazineCMS.Utility

<!-- Modal -->
<div class="modal fade" id="viewDocumentModal" tabindex="-1" role="dialog" aria-labelledby="viewDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewDocumentModalLabel">View Document</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe src="" id="documentViewer" style="width: 100%; height: 700px;"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



<div class="container-fluid mx-4">
    <div class="row">
        <!-- Left content -->
        <div class="col-lg-8">
            <!-- Phần hiển thị thông tin chi tiết của đóng góp -->
            <nav aria-label="breadcrumb">
                <!-- Breadcrumb -->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Contribution")">Contributions</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Details</li>
                </ol>
            </nav>

            <!-- Tiêu đề của đóng góp -->
            <h1 class="h2 mb-2 text-gray-800">
                Contribution Details
            </h1>
            <h1>@Model.Title</h1>
            <!-- Hiển thị trạng thái và ngày nộp -->

            <p>Submission Date: @Model.SubmissionDate</p>

            <!-- Hiển thị thông tin của đóng góp -->
            <div class="card shadow mt-4">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">Submitted by: @($"{Model.User.Firstname} {Model.User.Lastname}")</p>
                    <p class="card-text">Magazine: @Model.Magazine.Name</p>
                    <p class="card-text">
                        Status:
                        @if (Model.Status == SD.Status_Approved)
                        {
                            <span class="badge badge-success">@Model.Status</span>
                        }
                        else if (Model.Status == SD.Status_Rejected)
                        {
                            <span class="badge badge-danger">@Model.Status</span>
                        }
                    </p>
                    <p class="card-text">Submission Date: @Model.SubmissionDate.ToShortDateString()</p>
                    <p class="card-text">Descriptions: @Model.Magazine.Description</p>
                    @if (Model.Documents != null && Model.Documents.Any())
                    {
                        <div class="card shadow mt-4">
                            <div class="card-body">
                                <h3>File Submissions</h3>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Tên</th>
                                                <th scope="col">File</th>
                                                <th scope="col">View</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var document in Model.Documents)
                                            {
                                                <tr>
                                                    <td>@Model.User.Firstname @Model.User.Lastname</td>
                                                    <td>
                                                        <!-- Hiển thị tên tệp và tạo liên kết để tải xuống -->
                                                        @if (!string.IsNullOrEmpty(document.DocumentUrl))
                                                        {
                                                            <a href="@Url.Action("DownloadDocument", "Contribution", new { documentId = document.Id })" target="_blank">
                                                                @System.IO.Path.GetFileName(document.DocumentUrl)
                                                            </a>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div>
                                                            <a href="#" onclick="viewDocument(@document.Id)">View Document</a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Nút quay lại danh sách -->
                    <a asp-action="Index" asp-controller="Contribution" class="btn btn-secondary">Back to List</a>

                </div>
            </div>

            <!-- Hiển thị danh sách các tệp đã được tải lên -->
            @if (Model.Documents != null && Model.Documents.Any())
            {
                <div class="card shadow mt-4">
                    <div class="card-body">
                        <p>
                            Status:
                            @if (Model.Status == SD.Status_Approved)
                            {
                                <span class="badge badge-success">@Model.Status</span>
                            }
                            else if (Model.Status == SD.Status_Rejected)
                            {
                                <span class="badge badge-danger">@Model.Status</span>
                            }
                        </p>
                        <h3>Annotate:</h3>
                        <ul>
                            @foreach (var document in Model.Documents)
                            {
                                <li>
                                    <!-- Hiển thị chỉ tên cuối của tệp và tạo liên kết để tải xuống -->
                                    @if (!string.IsNullOrEmpty(document.DocumentUrl))
                                    {
                                        <span>@Model.User.Firstname @Model.User.Lastname:</span>
                                        <a href="@Url.Action("DownloadDocument", "Contribution", new { documentId = document.Id })" target="_blank">
                                            @System.IO.Path.GetFileName(document.DocumentUrl)
                                        </a>
                                    }
                                </li>
                            }
                        </ul>

                        <p>
                            Graded by:

                            @if (Model.Feedbacks != null && Model.Feedbacks.Any())
                            {
                                @foreach (var feedback in Model.Feedbacks)
                                {

                                    <span>@feedback.User.UserName</span>

                                    <br />

                                }
                            }
                            else
                            {
                            <p>No graded.</p>
                            }
                        </p>
                        <h3>Feedbacks</h3>

                        @if (Model.Feedbacks != null && Model.Feedbacks.Any())
                        {
                            <ul class="list-group">
                                @foreach (var feedback in Model.Feedbacks)
                                {
                                    <li class="list-group-item">
                                        <div style="white-space: pre-line;">
                                            <span class="font-weight-bold">Comment:</span> <span>@feedback.Comment</span><br />
                                            <span class="float-right">@feedback.FeedbackDate.ToString("HH:mm dd/MM/yyyy")</span>

                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No feedback available.</p>
                        }
                    </div>
                </div>
            }

        </div>

        <!-- Right side for Feedback and Status update -->
        <div class="col-lg-4">
            <!-- Form cập nhật trạng thái -->
            <div class="card shadow">
                <div class="card-body">
                    <h3>Update Status</h3>
                    <form asp-action="UpdateStatus" asp-controller="Contribution" method="post">
                        <div class="form-group">
                            <label for="status">New Status:</label>
                            <select class="form-control" id="status" name="status">
                                <option value="@SD.Status_Approved">Approved</option>
                                <option value="@SD.Status_Rejected">Rejected</option>
                            </select>
                        </div>
                        <input type="hidden" name="contributionId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-body">
                    <h3>Add Feedback</h3>
                    <form asp-action="AddFeedback" asp-controller="Contribution" method="post">
                        <div class="form-group">
                            <label for="comment">Comment:</label>
                            <textarea class="form-control" id="comment" name="Comment" rows="3" required></textarea>
                        </div>
                        <input type="hidden" name="contributionId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
            function viewDocument(documentId) {
                $('#viewDocumentModal').modal('show');
                $('#documentViewer').attr('src', '@Url.Action("ViewDocument", "Contribution")?documentId=' + documentId);
            }

            $(document).ready(function () {
                $('.delete-file').click(function (e) {
                    e.preventDefault();
                    var documentId = $(this).data('document-id');
                    $('#documentIdToDelete').val(documentId);
                    $('#deleteFileModal').modal('show');
                });

                $('#deleteFileForm').submit(function (e) {
                    e.preventDefault();
                    var documentId = $('#documentIdToDelete').val();
                    $.post('@Url.Action("DeleteDocument", "Contribution")', { documentId: documentId })
                        .done(function (data) {
                            if (data.success) {
                                location.reload();
                            } else {
                                alert('An error occurred while deleting the file.');
                            }
                        })
                        .fail(function () {
                            alert('An error occurred while deleting the file.');
                        });
                });
            });

        </script>
    }


